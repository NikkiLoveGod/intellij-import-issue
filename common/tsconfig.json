{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "ES6",
      "DOM",
      "DOM.Iterable",
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "rootDir": ".",
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "outDir": "./dist",
    "incremental": true
  },
  "include": [
    "./utils"
  ]
}
